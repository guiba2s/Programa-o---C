 Description :	Faça um programa que leia 3 números e imprima o maior deles
 ============================================================================
 */

#include <stdio.h>
#include <stdlib.h>

int main(void) {
	int numero1, numero2, numero3;

	setbuf(stdout, NULL);

	printf("Informe o primeiro número: ");
	scanf("%d", &numero1);
	printf("Informe o segundo número: ");
	scanf("%d", &numero2);
	printf("Informe o terceiro número: ");
	scanf("%d", &numero3);


	if((numero1 > numero2)&&(numero1 > numero3))
	{
		printf("Maior número é: %d", numero1);
	}
	else if ((numero2 > numero1)&&(numero2 > numero3))
	{
		printf("Maior número é: %d", numero2);
	}
	else
	{
		printf("Maior número é: %d", numero3);
	}
}
