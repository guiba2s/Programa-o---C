#include <stdio.h>
#include <stdlib.h>

//Apartir desse exercicio irei utilizar #defines para trabalhar com constantes
#define APROVADO "aprovado"
#define REPROVADO "reprovado"

int main(void) {
	char nome[30];
	float nota1, nota2, media;

	setbuf(stdout, NULL);

	printf("%s", APROVADO);
	printf("Informe seu nome: ");
	scanf("%s", &nome);
	printf("Valor do resultado da primeira prova: ");
	scanf("%f", &nota1);
	printf("Valor do resultado da segunda nota: ");
	scanf("%f", &nota2);


}
